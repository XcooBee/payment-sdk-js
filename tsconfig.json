{
  "compilerOptions": {
    "suppressImplicitAnyIndexErrors": true,
    "strictNullChecks": false,
    "strict": true,
    "target": "es6",
    "moduleResolution": "node",
    "module": "commonjs",
    "outDir": "./dist/node",
    "declaration": true,
    "baseUrl": "src",
    "plugins": [
      {
        "transform": "@zerollup/ts-transform-paths"
      }
    ],
    "paths": {
      "base64": ["base64/nodeBase64"]
    }
  },
  "files": ["src/node.ts"],
  "exclude": ["node_modules"]
}
