{
  "compilerOptions": {
    "suppressImplicitAnyIndexErrors": true,
    "strictNullChecks": false,
    "strictFunctionTypes": false,
    "strict": true,
    "baseUrl": "src",
    "outDir": "./dist/browser",
    "target": "es5",
    "module": "es2015",
    "lib": ["es2016", "dom", "es5"],
    "declaration": true,
    "sourceMap": true,
    "plugins": [
      {
        "transform": "@zerollup/ts-transform-paths"
      }
    ],
    "paths": {
      "base64": ["base64/browserBase64"]
    }
  },
  "files": ["src/browser.ts"],
  "exclude": ["node_modules"]
}
